package com.app.Service;

import java.util.List;

import javax.validation.Valid;
import javax.validation.constraints.Max;
import javax.validation.constraints.Min;

import com.app.Entities.Train;
import com.app.Entities.User;
import com.app.User.dto.AuthResponseDTO;
import com.app.controller.TrainController;

public interface TrainService {

	List<Train> getAllTrains();

	Train updatetraindetails(Train detachedtrain);

	String deletetraindetails(int trainid);

	Train addtraindetails(Train transienttrain);

	User getUserbyid(
			@Valid @Min(value = 1, message = "train id >= 1") @Max(value = 100, message = "train id must be < 100") int trainid);

}
